<header class="bg-gray-800 shadow-md p-4 flex justify-between items-center">
  <h1 class="text-xl font-bold text-white">3Dots Dashboard</h1>
  <div class="flex items-center gap-4">
    <nav class="flex gap-4">
      <a href="/" class="px-2 py-1 rounded <%= activeTab === 'home' ? 'bg-blue-700 text-white' : 'text-gray-300 hover:text-white' %>">
        <i class="fas fa-home mr-1"></i>Home
      </a>
      <a href="/pm2" class="px-2 py-1 rounded <%= activeTab === 'pm2' ? 'bg-blue-700 text-white' : 'text-gray-300 hover:text-white' %>">
        <i class="fas fa-cogs mr-1"></i>PM2
      </a>
      <a href="/docker" class="px-2 py-1 rounded <%= activeTab === 'docker' ? 'bg-blue-700 text-white' : 'text-gray-300 hover:text-white' %>">
        <i class="fab fa-docker mr-1"></i>Docker
      </a>
      <a href="/system" class="px-2 py-1 rounded <%= activeTab === 'system' ? 'bg-blue-700 text-white' : 'text-gray-300 hover:text-white' %>">
        <i class="fas fa-microchip mr-1"></i>System
      </a>
    </nav>
    <div class="flex items-center gap-3">
      <% if (typeof user !== 'undefined' && user) { %>
        <span class="text-gray-300 text-sm">Welcome, <%= user.email %></span>
        <a href="/auth/logout" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm transition duration-200">
          <i class="fas fa-sign-out-alt mr-1"></i>Logout
        </a>
      <% } else { %>
        <a href="/auth/login" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm transition duration-200">
          <i class="fas fa-sign-in-alt mr-1"></i>Login
        </a>
      <% } %>
    </div>
  </div>
</header>
